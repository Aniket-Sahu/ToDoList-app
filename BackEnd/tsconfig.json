{
  "compilerOptions": {
    "module": "es2020", 
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]  
}
